    public void addProduct(ProductsModel obj) 
    {
        System.out.println("Product Implementation");


        Session s=sessionFactory.openSession();
        s.beginTransaction();
        s.save(obj);
        s.getTransaction().commit();
        s.close();
        
    }
    
    
}
