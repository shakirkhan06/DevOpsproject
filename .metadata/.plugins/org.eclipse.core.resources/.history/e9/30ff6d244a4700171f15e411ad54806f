<script type="text/javascript">
$(document).ready(function() {
    $("#addcat").hide();
    $("#addsup").hide();
    $("#addpro").hide();

    $("#cbuttonadd").click(function() {
         $("#addcat").show();
           $("#addsup").hide();
           $("#addpro").hide();
           
    });
    
    $("#sbuttonadd").click(function() {
       $("#addcat").hide();
         $("#addsup").show();
         $("#addpro").hide();
  });
    
    $("#pbuttonadd").click(function() {
       $("#addcat").hide();
         $("#addsup").hide();
         $("#addpro").show();
  });
    

});
</script>
