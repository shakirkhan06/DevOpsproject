<script type="text/javascript">
$(document).ready(function() {
    $("#addcat").hide();
    $("#addsup").hide();
    $("#addpro").hide();

    $("#cbuttonadd").click(function() {
         $("#addcat").show();
           $("#addsup").hide();
           $("#addpro").hide();
           
    });
    
    $("#sbuttonadd").click(function() {
       $("#addcat").hide();
         $("#addsup").show();
         $("#addpro").hide();
  });
    
    $("#pbuttonadd").click(function() {
       $("#addcat").hide();
         $("#addsup").hide();
         $("#addpro").show();
  });
    

});


<!--  -->
</script>
<script type="text/javascript">
    $(function () {
        $("#dialog").dialog({
            modal: true,
            autoOpen: false,
            title: "Alert box",
            width: 300,
            height: 150
        });
        $("#myform").submit(function () {
            $("#addcat").show();
            $('#dialog').dialog('open');
           
        });
    });
</script>
